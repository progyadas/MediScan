<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/shadow">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/doc"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="2dp"
                android:src="@drawable/doc_profile" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/doc"
                android:fontFamily="@font/verdanab"
                android:text="Name"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/doctor_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_name"
                android:layout_margin="3dp"
                android:layout_toRightOf="@id/doc"
                android:fontFamily="@font/verdana"
                android:text="Place"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctor_place"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/doc"
                android:fontFamily="@font/verdana"
                android:text="SPECIALISATIONS :"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/specialist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/doc"
                android:fontFamily="@font/verdana"
                android:text="specialist"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>